<%= form_for @user, :url => {:controller => "users", :action => "after_transfer_to_another_user"} do |f| %>

  <div class="form-group">
    <%= f.label "In Wallet amount" %>
    <%= f.number_field :wallet, autofocus: true, autocomplete: 'wallet', class: 'form-control', :readonly => true%>
  </div>

  <div class="form-group">
    <%= f.label :wallet %>
    <%= number_field_tag :wallet, autofocus: true, autocomplete: 'wallet', class: 'form-control' %>
  </div>

<div class="form-group">
    <%= f.label :transfer_to_user %>
    <%= select_tag 'transfer_to_user', options_for_select(@users.collect{ |u| [u.username, u.id] }), autofocus: true, autocomplete: 'wallet', class: 'form-control' %>
  </div>
  

  <div class="form-group">
    <%= f.submit 'deduct amount', class: 'btn btn-primary' %>
  </div>
<% end %>